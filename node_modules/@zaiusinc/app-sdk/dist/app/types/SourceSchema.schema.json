{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "SourceSchemaCustomType": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "display_name": {
                    "type": "string"
                },
                "fields": {
                    "items": {
                        "$ref": "#/definitions/SourceSchemaField"
                    },
                    "type": "array"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "description",
                "display_name",
                "fields",
                "name"
            ],
            "type": "object"
        },
        "SourceSchemaField": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "display_name": {
                    "type": "string"
                },
                "format": {
                    "const": "url",
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "primary": {
                    "type": "boolean"
                },
                "type": {
                    "description": "Field type - can be a primitive type, custom type reference, or array syntax",
                    "pattern": "^(string|integer|boolean|decimal|\\w+|\\[\\w+\\])$",
                    "type": "string"
                }
            },
            "required": [
                "description",
                "display_name",
                "name",
                "type"
            ],
            "type": "object"
        }
    },
    "properties": {
        "custom_types": {
            "items": {
                "$ref": "#/definitions/SourceSchemaCustomType"
            },
            "type": "array"
        },
        "description": {
            "type": "string"
        },
        "display_name": {
            "type": "string"
        },
        "fields": {
            "items": {
                "$ref": "#/definitions/SourceSchemaField"
            },
            "type": "array"
        },
        "name": {
            "type": "string"
        }
    },
    "required": [
        "description",
        "display_name",
        "fields",
        "name"
    ],
    "type": "object"
}
