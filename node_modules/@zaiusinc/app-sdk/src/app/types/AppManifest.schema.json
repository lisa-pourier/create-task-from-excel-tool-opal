{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "AppCategory": {
            "enum": [
                "Accounting & Finance",
                "Advertising",
                "Analytics & Reporting",
                "Attribution & Linking",
                "Audience Sync",
                "CDP / DMP",
                "CRM",
                "Channel",
                "Commerce Platform",
                "Content Management",
                "Customer Experience",
                "Data Quality & Enrichment",
                "Lead Capture",
                "Loyalty & Rewards",
                "Marketing",
                "Merchandising & Products",
                "Offers",
                "Opal",
                "Personalization & Content",
                "Point of Sale",
                "Productivity",
                "Reviews & Ratings",
                "Site & Content Experience",
                "Subscriptions",
                "Surveys & Feedback",
                "Testing & Utilities"
            ],
            "type": "string"
        },
        "AppConsumer": {
            "additionalProperties": false,
            "properties": {
                "batch_size": {
                    "type": "number"
                },
                "batch_timeout": {
                    "type": "number"
                },
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                }
            },
            "required": [
                "description",
                "entry_point"
            ],
            "type": "object"
        },
        "AppDestination": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                },
                "schema": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/AppDestinationSchemaFunction"
                        },
                        {
                            "type": "string"
                        }
                    ]
                }
            },
            "required": [
                "description",
                "entry_point",
                "schema"
            ],
            "type": "object"
        },
        "AppDestinationSchemaFunction": {
            "additionalProperties": false,
            "properties": {
                "entry_point": {
                    "type": "string"
                }
            },
            "required": [
                "entry_point"
            ],
            "type": "object"
        },
        "AppFunction": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                },
                "global": {
                    "type": "boolean"
                },
                "installation_resolution": {
                    "additionalProperties": false,
                    "properties": {
                        "key": {
                            "type": "string"
                        },
                        "type": {
                            "enum": [
                                "GUID",
                                "HEADER",
                                "JSON_BODY_FIELD",
                                "QUERY_PARAM"
                            ],
                            "type": "string"
                        }
                    },
                    "required": [
                        "key",
                        "type"
                    ],
                    "type": "object"
                },
                "opal_tool": {
                    "type": "boolean"
                }
            },
            "required": [
                "description",
                "entry_point"
            ],
            "type": "object"
        },
        "AppJob": {
            "additionalProperties": false,
            "properties": {
                "cron": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                },
                "parameters": {
                    "$ref": "#/definitions/ValueHash",
                    "description": "An object with some restrictions. An interface that follows the ValueHash interface\ncan be safely written to any storage option."
                }
            },
            "required": [
                "description",
                "entry_point"
            ],
            "type": "object"
        },
        "AppLiquidExtension": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                },
                "input": {
                    "additionalProperties": {
                        "additionalProperties": false,
                        "properties": {
                            "description": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean"
                            },
                            "type": {
                                "enum": [
                                    "any",
                                    "boolean",
                                    "number",
                                    "string"
                                ],
                                "type": "string"
                            }
                        },
                        "required": [
                            "description",
                            "required",
                            "type"
                        ],
                        "type": "object"
                    },
                    "type": "object"
                }
            },
            "required": [
                "description",
                "entry_point"
            ],
            "type": "object"
        },
        "AppRuntime": {
            "enum": [
                "node12",
                "node18",
                "node18_rt",
                "node22"
            ],
            "type": "string"
        },
        "AppSource": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "function": {
                    "$ref": "#/definitions/AppSourceFunction"
                },
                "jobs": {
                    "additionalProperties": {
                        "$ref": "#/definitions/AppSourceJob"
                    },
                    "type": "object"
                },
                "lifecycle": {
                    "$ref": "#/definitions/AppSourceLifecycle"
                },
                "schema": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/AppSourceSchemaFunction"
                        },
                        {
                            "type": "string"
                        }
                    ]
                }
            },
            "required": [
                "description",
                "schema"
            ],
            "type": "object"
        },
        "AppSourceFunction": {
            "additionalProperties": false,
            "properties": {
                "entry_point": {
                    "type": "string"
                }
            },
            "required": [
                "entry_point"
            ],
            "type": "object"
        },
        "AppSourceJob": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                },
                "parameters": {
                    "$ref": "#/definitions/ValueHash",
                    "description": "An object with some restrictions. An interface that follows the ValueHash interface\ncan be safely written to any storage option."
                }
            },
            "required": [
                "description",
                "entry_point"
            ],
            "type": "object"
        },
        "AppSourceLifecycle": {
            "additionalProperties": false,
            "properties": {
                "entry_point": {
                    "type": "string"
                }
            },
            "required": [
                "entry_point"
            ],
            "type": "object"
        },
        "AppSourceSchemaFunction": {
            "additionalProperties": false,
            "properties": {
                "entry_point": {
                    "type": "string"
                }
            },
            "required": [
                "entry_point"
            ],
            "type": "object"
        },
        "AttributableMetric": {
            "enum": [
                "open",
                "click",
                "engage",
                "delivery"
            ],
            "type": "string"
        },
        "CampaignTargeting": {
            "additionalProperties": false,
            "description": "Defines the targeting requirements for a channel.",
            "properties": {
                "event_data": {
                    "additionalProperties": {
                        "type": [
                            "string",
                            "number",
                            "boolean"
                        ]
                    },
                    "description": "Any additional data to include on the events generated by the campaign run.",
                    "type": "object"
                },
                "identifier": {
                    "description": "The customer identifier field to target.",
                    "type": "string"
                }
            },
            "required": [
                "identifier"
            ],
            "type": "object"
        },
        "ChannelRateLimit": {
            "additionalProperties": false,
            "description": "Defines a rate limit for channel delivery in to form of <count> per <n> <unit>\nwhere unit is `second`, `minute`, `hour`, `day`, or <number> of seconds.\nE.g., count: 100, period: 15, unit: second => 100 per 15 seconds",
            "properties": {
                "count": {
                    "description": "The number of delivery requests (batches) per period of time",
                    "type": "number"
                },
                "grouping": {
                    "description": "Whether this rate limit applies to the app as a whole or per each install",
                    "enum": [
                        "app",
                        "install"
                    ],
                    "type": "string"
                },
                "period": {
                    "description": "The number of units of time to measure the rate limit over",
                    "type": "number"
                },
                "unit": {
                    "description": "The unit of time applied to the perioid",
                    "enum": [
                        "day",
                        "hour",
                        "minute",
                        "second"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "count",
                "grouping",
                "period",
                "unit"
            ],
            "type": "object"
        },
        "ChannelType": {
            "enum": [
                "email",
                "app_push",
                "web_push",
                "web_modal",
                "web_embed",
                "sms",
                "api",
                "direct_mail",
                "whatsapp",
                "facebook_messenger",
                "ad",
                "segment_sync",
                "test_channel"
            ],
            "type": "string"
        },
        "DeliveryMetric": {
            "enum": [
                "sent",
                "delivery",
                "delivery_unknown"
            ],
            "type": "string"
        },
        "DisengagementMetric": {
            "enum": [
                "disengage",
                "opt-out",
                "spam_report",
                "list_unsubscribe"
            ],
            "type": "string"
        },
        "EngagementMetric": {
            "enum": [
                "open",
                "click",
                "engage"
            ],
            "type": "string"
        },
        "ReachabilityMetric": {
            "enum": [
                "hard_bounce",
                "soft_bounce"
            ],
            "type": "string"
        },
        "Value": {
            "anyOf": [
                {
                    "$ref": "#/definitions/ValueHash"
                },
                {
                    "type": [
                        "null",
                        "string",
                        "number",
                        "boolean"
                    ]
                }
            ],
            "description": "A value type that is safe to write to any storage option"
        },
        "ValueHash": {
            "additionalProperties": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/ValueHash"
                    },
                    {
                        "items": {
                            "$ref": "#/definitions/Value"
                        },
                        "type": "array"
                    },
                    {
                        "type": [
                            "null",
                            "string",
                            "number",
                            "boolean"
                        ]
                    }
                ]
            },
            "description": "An object with some restrictions. An interface that follows the ValueHash interface\ncan be safely written to any storage option.",
            "type": "object"
        }
    },
    "properties": {
        "channel": {
            "additionalProperties": false,
            "properties": {
                "delivery": {
                    "additionalProperties": false,
                    "properties": {
                        "batch_size": {
                            "type": "number"
                        },
                        "concurrent_batches": {
                            "type": "number"
                        },
                        "rate_limits": {
                            "items": {
                                "$ref": "#/definitions/ChannelRateLimit"
                            },
                            "type": "array"
                        }
                    },
                    "type": "object"
                },
                "metrics": {
                    "additionalProperties": false,
                    "properties": {
                        "attributable": {
                            "items": {
                                "$ref": "#/definitions/AttributableMetric"
                            },
                            "type": "array"
                        },
                        "delivery": {
                            "items": {
                                "$ref": "#/definitions/DeliveryMetric"
                            },
                            "type": "array"
                        },
                        "disengagement": {
                            "items": {
                                "$ref": "#/definitions/DisengagementMetric"
                            },
                            "type": "array"
                        },
                        "engagement": {
                            "items": {
                                "$ref": "#/definitions/EngagementMetric"
                            },
                            "type": "array"
                        },
                        "reachability": {
                            "items": {
                                "$ref": "#/definitions/ReachabilityMetric"
                            },
                            "type": "array"
                        }
                    },
                    "type": "object"
                },
                "options": {
                    "additionalProperties": false,
                    "properties": {
                        "prepare": {
                            "type": "boolean"
                        },
                        "template_preview": {
                            "type": "boolean"
                        }
                    },
                    "type": "object"
                },
                "targeting": {
                    "anyOf": [
                        {
                            "items": {
                                "$ref": "#/definitions/CampaignTargeting"
                            },
                            "type": "array"
                        },
                        {
                            "const": "dynamic",
                            "type": "string"
                        }
                    ]
                },
                "type": {
                    "$ref": "#/definitions/ChannelType"
                }
            },
            "required": [
                "targeting",
                "type"
            ],
            "type": "object"
        },
        "consumers": {
            "additionalProperties": {
                "$ref": "#/definitions/AppConsumer"
            },
            "type": "object"
        },
        "destinations": {
            "additionalProperties": {
                "$ref": "#/definitions/AppDestination"
            },
            "type": "object"
        },
        "environment": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "functions": {
            "additionalProperties": {
                "$ref": "#/definitions/AppFunction"
            },
            "type": "object"
        },
        "jobs": {
            "additionalProperties": {
                "$ref": "#/definitions/AppJob"
            },
            "type": "object"
        },
        "liquid_extensions": {
            "additionalProperties": {
                "$ref": "#/definitions/AppLiquidExtension"
            },
            "type": "object"
        },
        "meta": {
            "additionalProperties": false,
            "properties": {
                "app_id": {
                    "type": "string"
                },
                "availability": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "categories": {
                    "items": {
                        "$ref": "#/definitions/AppCategory"
                    },
                    "type": "array"
                },
                "contact_email": {
                    "type": "string"
                },
                "display_name": {
                    "type": "string"
                },
                "summary": {
                    "type": "string"
                },
                "support_url": {
                    "type": "string"
                },
                "vendor": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "app_id",
                "availability",
                "categories",
                "contact_email",
                "display_name",
                "summary",
                "support_url",
                "vendor",
                "version"
            ],
            "type": "object"
        },
        "outbound_domains": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "runtime": {
            "$ref": "#/definitions/AppRuntime"
        },
        "sources": {
            "additionalProperties": {
                "$ref": "#/definitions/AppSource"
            },
            "type": "object"
        }
    },
    "required": [
        "meta",
        "runtime"
    ],
    "type": "object"
}

